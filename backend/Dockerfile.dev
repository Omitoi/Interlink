# Development Dockerfile for Go backend with hot reload
FROM golang:1.25-alpine

# Install air for hot reloading
RUN go install github.com/air-verse/air@latest

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Start with air for hot reloading
CMD ["air", "-c", ".air.toml"]
